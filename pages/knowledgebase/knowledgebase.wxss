/* pages/knowledgebase/knowledgebase.wxss */
.knowledge-container {
  width: 100%;
  height: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  background: rgb(243, 241, 241);
}

.knowledge-search-inupt {
  padding: 10rpx 30rpx;
  border-radius: 15rpx;
  background: white;
  box-shadow: 0 1rpx 1rpx black;
}

.knowledge-search-placeholder {
  text-align: center;
  font-size: 35rpx;
}

.type-num {
  margin: 20rpx 0 0;
  font-size: 25rpx;
  display: flex;
  color: white;
  flex-wrap: wrap;
  justify-content: space-between; 
}

.colorBlue {
  color: #0099FF;
}

.type-num-text {
  background: #0099FF;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-shadow: 0 1rpx 1rpx black;
}

.status-picker {
  display: flex;
  font-size: 35rpx;
  padding: 20rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 1rpx 1rpx black;
}

.bolder{
  font-weight: bolder;
}

.red {
  background: #FF0033;
}

.green {
  background: #09F768;
}

.bs {
  box-shadow: 0 1rpx 1rpx black;
}

.knowledge-list {
  width: 100%;
  height: calc(100% - 250rpx);
  margin-top: 10rpx;
  padding: 0 5rpx;
  box-sizing: border-box;
}

.row-flex {
  display: flex;
  align-items: center;
}

.list-item {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 10rpx;
}

.item-header {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
}

.item-detail {
  font-size: 30rpx;
  color: gray;
}

.detail-title {
  font: 38rpx bolder;
  color: black;
  line-height: 110rpx;
}

.marginL20 {
  margin-left: 20rpx;
}

.baffle {
  width: 100%;
  height: 85rpx;
  background: red;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  color: white;
  align-items: center;
  font-size: 30rpx;
  justify-content: center;
  z-index: 1111;
}