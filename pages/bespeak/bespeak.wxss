/* pages/bespeak/bespeak.wxss */
.main {
  font-size: 35rpx;
  color: #8d8d8d;
  width: 100%;
  height: 100%;
}

.head-container {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  line-height: 70rpx;
  padding-top: 30rpx;
  margin-bottom: 20rpx;
}

.head-container image {
  width: 128rpx;
  height: 128rpx;
}

.input-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100% - 340rpx);
  background: #f7f9fa;
  border: 1rpx solid #e9e9e9;
  width: 98%;
  margin: 0 auto;
}

.input-container view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-container input {
  padding: 20rpx 40rpx;
  margin: 20rpx;
  width: 60%;
  background: white;
  border: 1rpx solid #e4e4e4;
}

.ele-input {
  border-bottom: 1rpx solid #e4e4e4;
  width: 100%;
}

.ele-num {
  display: flex !important;
  flex-direction: row !important;
  width: 60% !important;
  padding: 20rpx 40rpx;
  border: 1rpx solid #e4e4e4;
  background: white;
  margin: 20rpx;
}

.ele-num input {
  width: 50%;
  border: 0;
  padding: 0;
  margin: 0;
}

.bespeak-btn {
  margin-top: 30rpx;
  width: calc(60% + 80rpx);
}

.button-hover {
  opacity: 0.8;
}

.contact-input-title {
  margin: 20rpx 0 10rpx;
}