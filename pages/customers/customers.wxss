.customer-item-btn {
  width: 100rpx;
  height: 100rpx;
}

.customer-item-btn:active {
  opacity: 0.5
}

.font45 {
  font-size: 45rpx;
}

.font30 {
  font-size: 30rpx;
  color: gray;
}

.customer-company-name {
  font-size: 33rpx;
  color: black;
}

.rowBetween {
  display: flex;
  justify-content: space-between;
}

.num-icon {
  width: 64rpx;
  height: 64rpx;
}