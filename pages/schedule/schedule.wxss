/* pages/schedule/schedule.wxss */
.schedule-container{
  width: 100%;
  height: 100%;
  font-size: 35rpx;
  background: #EEEEEE;
}

.tab-head {
  display: flex;
  justify-content: space-between;
  background: white;
}

.tab-head view {
  width: 50%;
  text-align: center;
  padding: 30rpx;
}

.active {
  color: #009DFF;
  border-bottom: 1rpx solid #009DFF;
}

swiper{
  width: 100%;
  height: calc(100% - 120rpx);
}

.swiper-item {
  width: 100%;
  height: 100%;
}

.list-item {
  margin: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  border-radius: 10rpx;
  padding: 30rpx 50rpx 30rpx 30rpx;
  box-shadow: 0 1rpx 1rpx #cccccc;
}

.item-header {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.item-detail {
  width: 80%;
  display: flex;
  flex-direction: column;
  line-height: 80rpx;
}

.item-detail-title {
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.type-icon-box {
  width: 32%;
  text-align: right;
}

.type-icon {
  font-size: 33rpx;
  font-weight: normal;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
}

.month-color {
  color: #13C2C2;
  border: 1rpx solid #87E8DE;
  background: #E6FFFB;
}

.year-color {
  color: #1890FF;
  border: 1rpx solid #C3E9FF;
  background: #E6F7FF;
}

.item-detail-info {
  font-size: 33rpx;
  color: #B3B3B3;
  display: flex;
  justify-content: space-between;
}