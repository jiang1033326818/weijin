/* pages/achievement/achievement.wxss */
view , page {
  padding: 0px;
  margin: 0px;
}

.page {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  -webkit-text-size-adjust:none;
  -webkit-user-select: none;
  font-size: 25rpx;
  color: #333;
  background: #f0f0f0;
  font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}


.row-flex{
  width: 95%;
  height: 350rpx;
  margin-left: 2.5%;
  margin-top: 10rpx;
  background: #ffffff;
  border-radius: 10rpx;
}

.toplist{
  height: 220rpx;
  padding-top: 15rpx;
  border-bottom: 1px solid #f0f0f0;
}
.leftlist{
  float: left;
  margin-left: 2%;
}
.item-header{
  width: 140rpx;
  height: 200rpx
}
.rightlist{
  float: left;
  margin-left: 3%
}
.item-text{
  font-weight: bold;
  font-size: 30rpx
}
