<view class="page">
  <view class="navbar">
    <block wx:for="{{tabs}}" wx:key="tabs">
      <view id="{{index}}" class="navbar__item {{activeIndex == index ? 'navbar__item_on' : ''}}" bindtap="navTabClick" >
        <view class="navbar__title">{{item.name}}</view>
      </view>
    </block>
  </view>
  <view class='swiper'>

    <view class='swiper-item'>
      <view class='allOfpeople'>

        <view wx:for="{{activeIndex==='1'?getimgphone:gitimgchat}}" class="row-flex list-item">

          <view class='topcon'>
            <view class='itemtime'>{{item.creationTime}}</view>
            <view class='pingjia'>{{item.pingjia}}</view>
          </view>

          <view class='toplist' bindtap='toclues' data-pnum="{{item.cid}}">
            <view class='leftlist'>
              <image src="http://zadai.net:8000/uploads/header/{{item.value}}.jpg" class="item-header"></image>
            </view>
            <view class='rightlist'>
              <text class='item-text' decode="{{true}}" space="{{true}}">{{item.realName===null?'':item.realName}} &nbsp;&nbsp;&nbsp;&nbsp;{{item.level===null?"":item.level}}</text>

              <view class='pink'>
                <text>{{item.workCompany===null?"":item.workCompany}}</text>
              </view>
              <view class='blue'>
                <text>{{item.hobby===null?"":item.hobby}}</text>
              </view>
            </view>

          </view>
          <view class='bottomlist'>
            <!-- <view class='people'>
                    <text>{{item.people}}人咨询过</text>
                  </view> -->

            <!-- <view class='peoplebutton1'>
                  电话咨询
                  </view> -->
            <view class='peoplebutton2' bindtap='btnclick' data-getcontent="{{item.id}}">
              立即评价
            </view>
            <modal title="标题" confirm-text="确认" success="suc" cancel-text="取消" hidden="{{onOff}}" bindconfirm="modalConfirm" bindcancel="modalCancel">
            <!-- 满意程度 -->
          <radio-group class="radio-group" bindchange="radioChange">
          <label class="radio" wx:for="{{items}}">
           <radio value="{{item.name}}" checked="{{item.checked}}" />
         {{item.value}}
  </label>
</radio-group>
              <textarea bindinput='bind1' class='bingtext' placeholder='请输入您的评价'  data-contentid="{{item.id}}"></textarea>
            </modal>
          </view>
        </view>

      </view>
    </view>



  </view>
  <!-- <modal show="{{showModal}}" height='60%' bindcancel="modalCancel" bindconfirm='modalConfirm'>
  <view class='modal-content'>
 
  </view>
</modal> -->


</view>