<view class="page">
  <view class="navbar">
    <block wx:for="{{tabs}}" wx:key="tabs">
      <view id="{{index}}" class="navbar__item {{activeIndex == index ? 'navbar__item_on' : ''}}" bindtap="navTabClick">
        <view class="navbar__title">{{item.name}}</view>
      </view>
    </block>
  </view>
  <view class='swiper'>

      <swiper-item style='margin-top:80rpx' class='swiper-item'>
        <view class='allOfpeople'>
        
            <view wx:for="{{getimgphone}}" class="row-flex list-item">

              <view class='topcon'>
                <view class='itemtime'>{{item.time}}</view>
                <view class='pingjia'>{{item.pingjia}}</view>
              </view>

              <view class='toplist'  bindtap='toclues'>
                <view class='leftlist'>
                  <image src="http://zadai.net:8000/uploads/header/{{item.value}}.jpg" class="item-header"></image>
                </view>
                <view class='rightlist'>
                  <text class='item-text' decode="{{true}}" space="{{true}}">{{item.name}} &nbsp;&nbsp;&nbsp;&nbsp;{{item.label}}</text>

                  <view class='pink'>
                    <text>{{item.from}}</text>
                  </view>
                   <view class='blue'>
                    <text>{{item.belong}}</text>
                  </view>
                </view>

              </view>
              <view class='bottomlist'>
                  <!-- <view class='people'>
                    <text>{{item.people}}人咨询过</text>
                  </view> -->

                  <!-- <view class='peoplebutton1'>
                  电话咨询
                  </view> -->
                   <view class='peoplebutton2'  bindtap='btnclick'>
                  立即评价
                  </view>

                  <modal title="标题" confirm-text="确认" success="suc" cancel-text="取消" hidden="{{onOff}}" bindconfirm="modalConfirm" bindcancel="modalCancel">
 <textarea bindchange='bind1'></textarea>
</modal>
              </view>

            </view>
  
        </view>
      </swiper-item>
 
    

  </view>
<!-- <modal show="{{showModal}}" height='60%' bindcancel="modalCancel" bindconfirm='modalConfirm'>
  <view class='modal-content'>
 
  </view>
</modal> -->


</view>