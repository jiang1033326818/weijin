.container{
  /* background: #DBDBDB; */
  padding: 0;
  /* display:block; */
}

.mytop{
  height: 380rpx;
  width: 100%;
  position: relative;
}
.mytop1{
  height: 300rpx;
  background-size: 300rpx 100%;
}
.mytop1 view{
  padding-top: 250rpx;
  margin-left: 300rpx;
  font-size: 35rpx;
  color: #ffffff;
}
.mytop2{
  height: 80rpx;
  line-height: 80rpx;
  background: #ffffff;
  font-size: 25rpx;
  margin-left: 300rpx
}
.head{
  position: absolute;
  left: 3%;
  top: 150rpx;
  height: 250rpx;
  width: 250rpx;
  background: #ffffff;
  border-radius: 100%;
  text-align: center;
  margin: 0 auto;
  overflow: hidden;
}
.head image{
  height: 210rpx;
  width: 210rpx;
}


.item{
  width: 100%;
  /* margin-top: 10rpx;  */
  font-size: 30rpx;
  display: flex;
  height: 120rpx;
  border-bottom: 1px solid #DBDBDB;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
}
.item0{
  width: 100%;
  font-size: 30rpx;
  display: flex;
  height: 20rpx;
  border-bottom: 1px solid #DBDBDB;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 50rpx;
}
.left{
  padding-left: 30rpx;
  color: 000;
  font-size: 35rpx;
}
.right{
  padding-right: 30rpx;
  color: #ddd;
}
.right image{
  height: 35rpx;
  width: 35rpx;
}
.loginout{
  margin-top: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  /* display: flex; */
}

.userinfo-nickname {
  color: #aaa;
}